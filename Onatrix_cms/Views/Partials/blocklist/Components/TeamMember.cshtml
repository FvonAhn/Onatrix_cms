@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamMember)Model.Content;
}

<div class="flex flex-col h-full border border-[var(--clr-white_200)]">
    @if (content.TeamMemberImage != null)
    {
        <img src="@content.TeamMemberImage.Url()" alt="@content.TeamMemberName" class="w-full object-cover" />
    }

    <div class="p-4">
        <h4 class="font-semibold">@content.TeamMemberName</h4>
        <p class="text-sm tex-gray-600">@content.TeamMemberRoll</p>
    </div>
</div>